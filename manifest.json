{
    "manifest_version": 2,
    "name": "OLX Property Viewer",
    "description": "Выводит дополнительные сведения из объявлений на страницу поиска",
    "version": "6.0",
    "background": {
        "scripts": ["js/background.js"]
    },
    "icons": {
        "24": "images/olx_24.png",
        "64": "images/olx_64.png",
        "128": "images/olx_128.png",
        "256": "images/olx_256.png"
    },
    "page_action": {
        "default_icon": "images/olx_24.png"
    },
    "permissions": [
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "storage",
        "contextMenus",
        "https://www.olx.ua/*",
        "https://map.land.gov.ua/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.olx.ua/*"
            ],
            "js": [
                "vendors/jquery.min.js",
                "js/utils.js",
                "js/base.js",
                "js/building.js",
                "js/land.js",
                "js/flat.js",
                "js/commercial.js"
            ],
            "css": [
                "css/list-updater.css"
            ]
        }
    ],
    "web_accessible_resources": [
        "css/*",
        "images/*",
        "js/*"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
